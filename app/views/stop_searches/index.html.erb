<h2><%= page_title %></h2>

<div class="lines paginated_content">
<table class="table table-hover table-striped">
  <thead>
    <tr>
      <th><%= t("simple_form.labels.stop_search.stop_name") %></th>
      <th><%= t("simple_form.labels.stop_search.stop_code") %></th>
      <th>Type</th>
      <th>SIM</th>
      <th>Code INSEE</th>
      <th>Mode de transport</th>
      <th>Lat</th>
      <th>Lon</th>
    </tr>
  </thead>

  <tbody>
    <% @stop_search.results.each do |stop| %>
      <tr>
        <td><%= link_to stop.name, stop_path(stop.id) %></td>
        <td><%= stop.stop_code %></td>
        <td><%= stop.quay_type %></td>
	<td><% if stop.mi_system %> <%= link_to stop.mi_system.name, mi_system_path(stop.mi_system_id) %><% end %></td>
        <td><%= stop.administrative_code %></td>
        <td><%= stop.transport_mode %></td>
        <td><%= stop.shape.y %></td>
        <td><%= stop.shape.x %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>


<br>

<%= link_to 'New Stop search', new_stop_search_path %>
