<h2><%= page_title %></h2>

<div class="lines paginated_content">
<table class="table table-hover table-striped">
  <thead>
    <tr>
      <th><%= t("simple_form.labels.stop_search.stop_name") %></th>
      <th><%= t("simple_form.labels.stop_search.postal_code") %></th>
      <th><%= t("simple_form.labels.stop_search.administrative_code") %></th>
      <th><%= t("simple_form.labels.stop_search.stop_code") %></th>
      <th><%= t("simple_form.labels.stop_search.stop_id") %></th>
      <th><%= t("simple_form.labels.stop_search.mis_id") %></th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @stop_search.results.each do |stop| %>
      <tr>
        <td><%= stop.name %></td>
        <td><%= stop.administrative_code %></td>
        <td><%= stop.administrative_code %></td>
        <td><%= stop.stop_code %></td>
        <td><%= stop.id %></td>
        <td><%= stop.mi_system_id %></td>
        <td>
          <%= link_to 'Consulter', stop, :class => 'btn btn-default btn-sm' %>
          <%= link_to 'Supprimer', stop, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-danger btn-sm' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>


<br>

