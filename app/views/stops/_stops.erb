<div class="lines paginated_content">
  <table class="table table-hover table-striped">
    <thead>
      <tr>
        <th><%= sort_link @q, :name, t("simple_form.labels.stop.name") %></th>
        <th><%= t("simple_form.labels.stop.id") %></th>
        <th><%= t("simple_form.labels.stop.type") %></th>
        <th><%= t("simple_form.labels.stop.mis") %></th>
        <th><%= t("simple_form.labels.stop.administrative_code") %></th>
        <th><%= t("simple_form.labels.stop.transportation_mode") %></th>
        <th><%= t("simple_form.labels.stop.latitude") %></th>
        <th><%= t("simple_form.labels.stop.longitude") %></th>
      </tr>
    </thead>
    
    <tbody>
      <% @stops.each do |stop| %>
      <tr>
        <td><%= link_to stop.name, stop_path(stop.id) %></td>
        <td><%= stop.code %></td>
        <td><%= stop.quay_type %></td>
        <td><% if stop.mis %> <%= link_to stop.mis.name, miss_path(stop.mis_id) %><% end %></td>
        <td><%= stop.administrative_code %></td>
        <td><%= stop.transport_mode %></td>
        <td><%= stop.lat %></td>
        <td><%= stop.lon %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
