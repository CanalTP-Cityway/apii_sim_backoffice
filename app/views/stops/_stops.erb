<div class="lines paginated_content">
  <table class="table table-hover table-striped">
    <thead>
      <tr>
        <th><%= sort_link @q, :name, "Nom" %></th>
        <th>Identifiant</th>
        <th>Type</th>
        <th>SIM</th>
        <th>Code INSEE</th>
        <th>Mode de transport</th>
        <th>Latitude</th>
        <th>Longitude</th>
      </tr>
    </thead>

    <tbody>
      <% @stops.each do |stop| %>
      <tr>
        <td><%= link_to stop.name, stop_path(stop.id) %></td>
        <td><%= stop.code %></td>
        <td><%= stop.quay_type %></td>
        <td><% if stop.mis %> <%= link_to stop.mis.name, miss_path(stop.mis_id) %><% end %></td>
        <td><%= stop.administrative_code %></td>
        <td><%= stop.transport_mode %></td>
        <td><%= stop.lat %></td>
        <td><%= stop.lon %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>