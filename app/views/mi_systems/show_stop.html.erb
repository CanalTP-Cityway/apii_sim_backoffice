<div class="row">   
  <div class="col-md-4">      
    <p>
      <ul class="list-group">
        <li class="list-group-item disabled title">
          <%= icon('info-circle') %><strong>Info Arrêt</strong>
        </li>
        <li class="list-group-item">
          <strong>Nom :</strong> <%= @stop.name %>
        </li>
        <li class="list-group-item">
          <strong>Identifiant :</strong> <%= @stop.stop_code %>
        </li>
	<li class="list-group-item">
          <strong>Type :</strong> <%= @stop.quay_type %>
        </li>
        <li class="list-group-item">
          <strong>SIM :</strong> <%= link_to @stop.mi_system.name, mi_system_path(@stop.mi_system.id) %>
        </li>
        <li class="list-group-item">
          <strong>Latitude-Longitude :</strong> <%= @stop.shape.y if @stop.shape %> - <%= @stop.shape.x if @stop.shape %>
        </li>
        <li class="list-group-item">
          <strong>Code INSEE :</strong> <%= @stop.administrative_code %>
        </li>
      </ul>
    </p>
  </div>
  <div class="col-md-8">
    <!-- html map container -->
    <%= map_layers_container(@map, :class => 'small_size', :include_loading => true) %>     
    <!-- map_layers js scripts and if necessary its dependencies -->
    <%= map_layers_includes(@map, :onload => true) %>
  </div>
</div>
<div class="row">   
  <p>
    <ul class="list-group">
      <li class="list-group-item disabled title">
        <div class="pull-left"><%= icon('link') %><strong>Transitions</strong></div>
        <div class="clearfix"/>
      </li>
      <% unless @stop.primary_connections.empty? %>
      <li class="list-group-item">
        <table class="table table-hover table-strip">
          <thead>
            <tr>
              <th>#</th>
              <th>Vers l'arrêt</th>
              <th>Identifiant</th>
              <th>SIM</th>
              <th>Code INSEE</th>
              <th>Durée (min)</th>
              <th>Durée PMR (min)</th>
              <th>Actif</th>
            </tr>
          </thead>
          <tbody>
            <% i = 0.to_i %>
            <% @stop.primary_connections.each do |connection| %>
            <% i = i.to_i + 1 %>
            <tr>
              <td><%= i %></td>
              <td><%= link_to connection.stop_2.name, stop_path(connection.stop_2_id) %></td>
              <td><%= connection.stop_2.stop_code %></td>
              <td><%= link_to connection.stop_2.mi_system.name, mi_system_path(connection.stop_2.mi_system.id) %></td>
              <td><%= connection.stop_2.administrative_code %></td>
              <td><%= connection.duration %></td>
              <td><%= connection.prm_duration %></td>             
              <td>
		<% if connection.validity? %>
                  <%= 'Oui' %>
                <% else %>
                  <%= 'Oui' %>
                <% end %>		
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>       
      </li>
      <% end %>
      <% unless @stop.secondary_connections.empty? %>
      <li class="list-group-item">
        <table class="table table-hover table-strip">
          <thead>
            <tr>
              <th>#</th>
              <th>Depuis l'arrêt</th>
              <th>Identifiant</th>
              <th>SIM</th>
              <th>Code INSEE</th>
              <th>Durée (min)</th>
              <th>Durée PMR (min)</th>
              <th>Actif</th>
            </tr>
          </thead>
          <tbody>
            <% i = 0.to_i %>
            <% @stop.secondary_connections.each do |connection| %>
            <% i = i.to_i + 1 %>
            <tr>
              <td><%= i %></td>
              <td><%= link_to connection.stop_1.name, stop_path(connection.stop_1_id) %></td>
              <td><%= connection.stop_1.stop_code %></td>
              <td><%= link_to connection.stop_1.mi_system.name, mi_system_path(connection.stop_1.mi_system.id) %></td>
              <td><%= connection.stop_1.administrative_code %></td>
              <td><%= connection.duration %></td>
              <td><%= connection.prm_duration %></td>             
              <td>
		<% if connection.validity? %>
                  <%= 'Oui' %>
                <% else %>
                  <%= 'Oui' %>
                <% end %>		
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>       
      </li>
      <% end %>
    </ul>
  </p>
</div>  


<%= link_to 'Back', stops_mi_system_path(@mi_system) %>
