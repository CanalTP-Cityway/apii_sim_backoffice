<div class="row">   
  <p>
    <ul class="list-group">
      <li class="list-group-item disabled title">
        <div class="pull-left"><%= icon('link') %><strong>Transitions</strong></div>
        <div class="clearfix"/>
      </li>
      <% unless @connections.empty? %>
      <li class="list-group-item">
        <table class="table table-hover table-strip">
          <thead>
            <tr>
              <th>#</th>
	      <th>De l'arrêt</th>
              <th>Identifiant</th>
              <th>SIM départ</th>
              <th>Vers l'arrêt</th>
              <th>Identifiant</th>
              <th>SIM arrivée</th>
              <th>Code INSEE</th>
              <th>Durée (min)</th>
              <th>Durée PMR (min)</th>
              <th>Actif</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% i = 0.to_i %>
            <% @connections.each do |connection| %>
            <% i = i.to_i + 1 %>
            <tr>
              <td><%= i %></td>
              <td><%= link_to connection.stop_1.name, stop_path(connection.stop_1_id) %></td>
              <td><%= connection.stop_1.stop_code %></td>
              <td><%= link_to connection.stop_1.mi_system.name, mi_system_path(connection.stop_1.mi_system.id) %></td>
              <td><%= link_to connection.stop_2.name, stop_path(connection.stop_2_id) %></td>
              <td><%= connection.stop_2.stop_code %></td>
              <td><%= link_to connection.stop_2.mi_system.name, mi_system_path(connection.stop_2.mi_system.id) %></td>
              <td><%= connection.stop_2.administrative_code %></td>
              <td><%= connection.duration %></td>
              <td><%= connection.prm_duration %></td>             
              <td>
		<% if connection.validity? %>
                  <%= 'Oui' %>
                <% else %>
                  <%= 'Oui' %>
                <% end %>		
              </td>
	      <td><%= link_to 'Visualiser', "connections/#{connection.id}" %></td>
            </tr>
            <% end %>
          </tbody>
        </table>       
      </li>
      <% end %>
    </ul>
  </p>
</div>  

<%= link_to 'Back', @mi_system %>
