<h2><%= page_title %></h2>

<div class="row">   
  <div class="col-md-4">      
    <p>
      <ul class="list-group">
        <li class="list-group-item disabled title">
          <%= icon('info-circle') %><strong>Info Sim</strong>
        </li>
        <li class="list-group-item">
          <strong>Nom :</strong> <%= @mi_system.name %>
        </li>
        <li class="list-group-item">
          <strong>URL :</strong> <%= link_to @mi_system.api_url, @mi_system.api_url %>
        </li>
        <li class="list-group-item">
          <strong>Api key :</strong> <%= @mi_system.api_key %>
        </li>
        <li class="list-group-item">
          <strong>Période :</strong> du <%= l @mi_system.start_date %> au <%= l @mi_system.end_date %>
        </li>
	<li class="list-group-item">
	  <strong># d'arrêts :</strong>
	  <%= @mi_system.stops.size %>
	  <%= link_to 'Liste des arrêts du SIM', stops_mi_system_path(@mi_system) %>
	</li>
	<li class="list-group-item">
	  <strong># de connections :</strong><%= @mi_system.connections.size %>
	  <%= link_to 'Liste des connections du SIM', connections_mi_system_path(@mi_system) %>
        </li>
      </ul>
    </p>
    <p>
      <ul class="list-group">
        <li class="list-group-item disabled title">
          <%= icon('check') %><strong>Mode(s) autorisé(s)</strong>
        </li>
        <li class="list-group-item">
          <% @mi_system.modes.each do |mode| %>
          <span class="mode"><%= mode.mode_code %></span>
          <% end %>
        </li>
      </ul>
    </p>
    <p>
      <ul class="list-group">
        <li class="list-group-item disabled title">
          <%= icon('list') %><strong>Capacités</strong>
        </li>
        <li class="list-group-item">
          <% case @mi_system.multiple_starts_and_arrivals %>
	  <% when 1 %>
	  <%= 'Recherche itinéraire n x m non détaillée' %>
	  <% end %>
        </li>
      </ul>
    </p>
  </div>
  <div class="col-md-8">
    <!-- html map container -->
    <%= map_layers_container(@map, :class => 'small_size', :include_loading => true) %>     
    <!-- map_layers js scripts and if necessary its dependencies -->
    <%= map_layers_includes(@map, :onload => true) %>
  </div>


</div>

