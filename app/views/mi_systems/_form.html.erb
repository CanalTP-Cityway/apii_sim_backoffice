<h2><%= page_title %></h2>
<%= simple_form_for @mi_system, :html => { :class => "form-horizontal" } do |f| %>
  <%= f.input :name %>
  <%= f.input :comment %>
  <%= f.input :api_url %>
  <%= f.input :api_key %>
  <%= f.input :start_date, as: :date, :input_html => { "data-behaviour" => "datepicker", value: l(f.object.start_date) } %>
  <%= f.input :end_date, as: :date, :input_html => { "data-behaviour" => "datepicker", value: l(f.object.end_date)  } %>
  <%= f.input :multiple_starts_and_arrivals %>
  <div class="form-actions">
    <%= f.submit %> | <%= link_to 'Annuler', mi_systems_path %>
  </div>
<% end %>

  
