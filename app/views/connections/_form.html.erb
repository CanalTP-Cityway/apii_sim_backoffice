<%= simple_form_for [@connection], :html => {:class => 'form-horizontal', :role => 'form' } do |form| %>
  <div class ="form-inputs">
    <%= form.association :stop1, prompt: t("simple_form.labels.connection.select_a_first_stop") %>
    <%= form.association :stop2, prompt: t("simple_form.labels.connection.select_a_last_stop")%>
    <%= form.input :distance %>
    <%= form.input :duration %>
    <%= form.input :prm_duration %>
    <%= form.input :active %>
  </div>
  <div class="col-sm-offset-3 col-sm-10 actions">
    <%= form.submit %>
    <%= link_to 'Retour', @connection %>
  </div>
<% end %>
