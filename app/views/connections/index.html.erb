<h1>Listing connections</h1>

<table>
  <thead>
    <tr>
      <th>Stop 1</th>
      <th>Stop 2</th>
      <th>Distance</th>
      <th>Duration</th>
      <th>Prm duration</th>
      <th>Shape</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @connections.each do |connection| %>
      <tr>
        <td><%= connection.stop_1_id %></td>
        <td><%= connection.stop_2_id %></td>
        <td><%= connection.distance %></td>
        <td><%= connection.duration %></td>
        <td><%= connection.prm_duration %></td>
        <td><%= connection.shape %></td>
        <td><%= link_to 'Show', connection %></td>
        <td><%= link_to 'Edit', edit_connection_path(connection) %></td>
        <td><%= link_to 'Destroy', connection, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

