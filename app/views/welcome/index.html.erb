<div class="jumbotron">  
  <div class="row">   
    <div class="col-md-8">      
      <p>
        <h1>APII-SIM Admin </h1>
         Backoffice des "méta-données" fournissant les outils nécessaires à la supervision de l'actualisation des méta-données et à leurs rectifications.   
      </p>
      <p>
        <%= link_to "Rechercher un arrêt", new_stop_search_path, :class => "btn btn-info btn-lg" %>
      </p>
    </div>
    <div class="col-md-4">
      <%= image_tag "itineraire.jpg", :class => "img-rounded"  %>
    </div>
  </div>
</div>

<!-- Example row of columns -->
<div class="row">
  <div class="col-md-6">
    <div class="panel panel-info">
      <div class="panel-heading">
        Sims
      </div>
      <div class="panel-body">
        <table class="table table-hover table-striped">
          <thead>
            <tr>
              <th>Nom</th>
              <th>Arrêts</th>
              <th>Connections</th>
            </tr>
          </thead>

          <tbody>
            <% @mi_systems.limit(10).each do |mi_system| %>
            <tr>
              <td><%= mi_system.name %></td>
              <td><%= mi_system.stops.size %></td>
              <td><%= mi_system.connections.size %></td>            
            </tr>
            <% end %>
          </tbody>
        </table>

        <p><%= link_to 'Voir détails &raquo;'.html_safe, mi_systems_path, :class => "btn btn-default" %></p>
      </div>
    </div>            
  </div>
  <div class="col-md-6">
    <div class="panel panel-info">
      <div class="panel-heading">Imports</div>
      <div class="panel-body">
        <table class="table table-hover table-striped">
          <thead>
            <tr>
              <th>Date</th>
              <th>Résultat</th>
              <th>Durée</th>
              <th>Transitions</th>
            </tr>
          </thead>

          <tbody>
            <% @stops.limit(10).each do |stop| %>
            <tr>
              <td><%= stop.stop_code %></td>
              <td><%= stop.mi_system %></td>
              <td><%= stop.name %></td>
              <td><%= stop.stop_type %></td>           
            </tr>
            <% end %>
          </tbody>
        </table>
        <p><%= link_to 'Voir détails &raquo;'.html_safe, stops_path, :class => "btn btn-default" %></p>
      </div>
    </div>      
  </div>
</div>
