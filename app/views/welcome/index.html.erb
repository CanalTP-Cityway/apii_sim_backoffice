<div class="jumbotron">  
  <div class="row">   
    <div class="col-md-8">      
      <p>
        <h1>APII-SIM Admin </h1>
         Backoffice des "méta-données" fournissant les outils nécessaires à la supervision de l'actualisation des méta-données et à leurs rectifications.   
      </p>
      <p>
        <%= link_to "Rechercher un arrêt", stops_path, :class => "btn btn-info btn-lg" %>
      </p>
    </div>
    <div class="col-md-4">
      <%= image_tag "itineraire.jpg", :class => "img-rounded"  %>
    </div>
  </div>
</div>

<!-- Example row of columns -->
<div class="row">
  <div class="col-md-6">
    <div class="panel panel-info">
      <div class="panel-heading">
        Sims
      </div>
      <div class="panel-body">
        <table class="table table-hover table-striped">
          <thead>
            <tr>
              <th>Nom</th>
	      <th><%= t("simple_form.labels.mis.start_date") %></th>
	      <th><%= t("simple_form.labels.mis.end_date") %></th>
              <th># Arrêts</th>
              <th># Connections</th>
            </tr>
          </thead>

          <tbody>
            <% @miss.limit(10).each do |mis| %>
            <tr>
              <td><%= link_to mis.name, miss_path(mis.id) %></td>
              <td><%= mis.start_date %></td>
              <td><%= mis.end_date %></td>
              <td><%= mis.stops.size %></td>
              <td><%= mis.connections.size %></td>            
            </tr>
            <% end %>
          </tbody>
        </table>

        <p><%= link_to 'Voir détails &raquo;'.html_safe, miss_index_path, :class => "btn btn-default" %></p>
      </div>
    </div>            
  </div>
  <div class="col-md-6">
    <div class="panel panel-info">
      <div class="panel-heading">Imports</div>
      <div class="panel-body">
        <table class="table table-hover table-striped">
          <thead>
            <tr>
              <th>Date</th>
              <th>Résultat</th>
              <th>Durée</th>
              <th>Transitions</th>
            </tr>
          </thead>

          <tbody>
            <% @stops.limit(10).each do |stop| %>
            <tr>
              <td><%= stop.code %></td>
              <td><%= stop.mis %></td>
              <td><%= stop.name %></td>
              <td><%= stop.stop_type %></td>           
            </tr>
            <% end %>
          </tbody>
        </table>
        <p><%= link_to 'Voir détails &raquo;'.html_safe, stops_path, :class => "btn btn-default" %></p>
      </div>
    </div>      
  </div>
</div>
